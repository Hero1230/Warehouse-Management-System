// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Product {
  id       String  @id @default(uuid())
  name     String
  price    Float
  url      String
  quantity Int?    @default(0)
 orderProducts  OrderProduct[] @relation("ProductToOrderProduct")
}
model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String
  email     String
  password  String
  token     Token?  @relation
}

model Token {
  id            String  @id @default(uuid())
  refreshToken String  @unique
  ip            String
  userAgent     String
  isValid       Boolean
  user          User?   @relation(fields: [userId], references: [id])
  userId        String? @unique
}

model Order{
  id            String  @id @default(uuid())
   orderProducts  OrderProduct[] @relation("OrderToOrderProduct")
  status  OrderStatus
  address String
  customer String
  customerEmail String
  totalPrice Float
  paid Boolean @default(true)
}


model OrderProduct {
  id        String  @id @default(uuid())
  quantity  Int
  product   Product @relation("ProductToOrderProduct", fields: [productId], references: [id])
  productId String
  order     Order   @relation("OrderToOrderProduct", fields: [orderId], references: [id])
  orderId   String
}

enum OrderStatus{
  CREATED
  PROCESSING
  COMPLETED
  CANCELLED
}